/* pages/home/home.wxss */
/* 菜单 */
.menu image{
  width: 84%;
  height: 50px;
}
.menu text{
  font-size: 12px;
}
.menu{
  margin-left: 10%;
  text-align: center;
  margin-top: 45rpx;
}
/* 通知栏 */
.notice{
  font-size: 11px;
  margin-top: 20px;
  border-top: 1px solid silver;
  padding-top: 10px;
  height: 25px;
  overflow: hidden;
}
.notice_last{
  border-right: 1px solid silver;
  color: cornflowerblue;
  font-size: 12px;
}
/* 阴影 */
.shadow{
  background-color: silver;
  height: 10px;
}
/* 活动 */
.activity image{
    border-radius: 10px;
    height: 80px;
    width: 95%;
}
.activity{
  margin-top: 15px;
}
/* 会员卡 */
.card image{
  height: 60px;
  width: 90%;
  border-radius: 25px;
  margin-left: 5%;
}
.card{
  margin-top: 15px;
}
/* 限时抢购 */
.limited image{
  width: 60%;
  height: 15px;
}
.limited_tike image{
  height: 25px;
}
.banner{
  height:260rpx; 
  width:100%;
  display: flex;
  display: -webkit-box;
  flex-direction: column;
}
.banner_Item image{
  width: 100%;
  height: 80px;
}
.banner_Item{
  width: 30%;
  display: flex;
  flex-direction: column;
  text-align: center;
}
.item_coa{
  color: red;
}
.item_cob{
  color: silver;
  text-decoration:line-through
}
.item{
  color: silver;
}
/* 店家 */
.owner image{
  width: 90%;
  height: 80px;
  border-radius: 50%;
}
.owner{
  text-align: center;
  font-size: 12px;
}
.owner_bor{
  border: 1px solid skyblue;
  border-radius: 15px;
  color: skyblue;
  margin-top: 5px;
  width: 80%;
  text-align: center;
  margin-left: 10%;
}
/* 商家展示 */
.exhibition image{
  width: 80%;
  height: 80px;
  border-radius: 50%;
}
.exhibition{
  text-align: left;
  font-size: 14px;
  color: silver;
  border-bottom: 1px solid silver;
  margin-top: 15px;
}
.exhibition_supa{
  border: 1px solid red;
  border-radius: 25px;
  color: white;
  background-color: red;
}
.exhibition_supb{
  border: 1px solid red;
  border-radius: 25px;
  color: red;
  margin-left: 5%;
}